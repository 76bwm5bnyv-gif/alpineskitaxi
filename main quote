  <script>
    const modal = document.getElementById('modal');
    document.getElementById('acceptBtn').addEventListener('click', ()=>{modal.style.display='flex';modal.scrollIntoView({behavior:'smooth'})});
    document.getElementById('contactBtn').addEventListener('click', ()=>{window.location.href='mailto:bookings@alpineride.example?subject=Inquiry%20-%20Geneva%20to%20Bourg%20St%20Maurice%20deal'});
    function closeModal(){modal.style.display='none'}
    function confirmBooking(){
      closeModal();
      alert('Thanks — we have received your booking request. AlpineRide will contact you to confirm and take payment.');
    }

    function downloadSummary(){
      const text = `AlpineRide Taxis - Booking Summary\n\nRoute: Geneva (GVA) ↔ Bourg-St-Maurice\nOutbound: 28.12.2025 — depart 10:30\nReturn: 04.01.2026 — depart 05:00\nPassengers: up to 3\nTotal: €280\n\nContact: bookings@alpineride.example | +41 22 000 0000`;
      const blob = new Blob([text],{type:'text/plain'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = 'AlpineRide_booking_summary.txt'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    }
  </script>
